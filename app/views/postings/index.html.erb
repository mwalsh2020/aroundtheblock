<div class="container">

  <h1>Job Postings</h1>

  <div>
    <h1>Create a new posting</h1>
    <div>
      <%= form_for @posting, method: :post do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :price %>
        <%= f.number_field :price %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <div>
    <ul>
      <% @postings.each do |posting| %>
        <li> <b>Title: <%= posting.title %> </b></li>
        <li> Description: <%= posting.description %> </li>
        <!-- if application created disable this button
          and "application sent" -->
        <%= link_to 'Submit Application', new_posting_application_path(posting) %>
      <% end %>
    <ul>
  </div>
</div>


