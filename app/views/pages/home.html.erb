<div class="bd-masthead mb-3">
  <div class="container">
    <div class="row align-items-lg-center">
      <div class="col-md-8 order-md-1 col-lg-7 text-md-start">
        <h1 class=mt-5>Blockchain Projects Need Developers</h1>
        <h5>Blockchain protocols are the fastest growing technology in history. Find your ideal next project and join the revolution. </h5>
      </div>
      <div class="col-8 mx-auto col-md-4 order-md-2 col-lg-5">
        <%= image_tag "undraw_digital_currency_qpak.svg", alt: "alttext", width: 500, class: 'img-fluid' %>

      </div>
    </div>



    <div class="cards mt-3">
      <% @recent_posts.each do |p| %>
        <div class="card-preview">
          <div class="mt-2">
            <%= cl_image_tag p.photo.key %>
          </div>
          <div class="card-preview-infos">
            <div>
              <h2> <%= link_to "#{p.title}", "/postings/#{p.id}" %> </h2>
              <p> <%= truncate(p.description, length: 140, separator: ' ') %></p>
            </div>
            <h2 class="card-preview-pricing"> $<%= p.price %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-preview-user avatar-bordered" />
          </div>
        </div>
      <% end %>
    </div>

    <h4 class="mt-3"> <%= link_to "See All Postings", "/postings" %> </h4>

  </div>
</div>



